<h1>Authenticate#index</h1>

<% if @current_player -%>
  Logged in 
<% else -%>
  You must login below to use this app.
<% end -%>

<div>
  <a href="http://apps.facebook.com/enpassant/">Login through Facebook</a>.
</div>

<% form_tag  :action => 'login' do %>
  <p>
    <label for="email">Email:</label>
    <%= text_field_tag :email, params[:email] %>	
  </p>
  
  <p>
    <label for="security_phrase">Security Phrase:</label>
    <%= text_field_tag :security_phrase, params[:security_phrase] %>	
  </p>
  
  <p>
    <%= submit_tag "Login" %>
  </p>
<% end %>
  