<h2>New match !</h2>

<% form_for(:match, :url => create_match_path ) do |f| %>
<div>
<!-- Opponent: [Dean]<input type="hidden" name="opponent_id" value="1" /> 
 hard-coded till ajax/facebook opponent-chooser ready -->

<input type="text" id="opponent_name" name="opponent_name" />
<script>
$('#opponent_name').autocomplete(
	{
    source: '<%= match_players_path %>'
	}
);

</script>
</div>
<div>
<label for="ck_opp_on_white">
  <input type="checkbox" value="1" name="opp_on_white" id="ck_opp_on_white"/>
  Let them play white ?
</label>
</div>

<div>
Starting Position:<br/>
<textarea height="5" width="70" id="start_pos" style="width:300px;" name="start_pos" title="A PGN or FEN formatted game specification"></textarea>
</div>

<div>
<%= submit_tag "Start" %>
</div>

<% end %>
